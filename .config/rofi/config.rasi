configuration {
  modi: "run,drun,window,Kill:~/.config/rofi/scripts/kill.sh";
  width: 20;
  font: "Iosevka FT Regular 10.5";
  terminal: "kitty";
  disable-history: false;
  sidebar-mode: true;
  tokenize: true;
  m: "-5";
  line-margin: 4;
  line-padding: 2;
  separator-style: "none";
  hide-scrollbar: true;
  window-format: "{w} {c}";
  display-drun: "Apps";
  display-run: "Run";
  display-window: "Windows";
}

* {
  /*bg: #0F1212;*/
  bg: #1d212a;
  accent: #d89495;
  fg: #1d212a;
  button: #a7bdfb;
  
  background-color: @bg;
  text-color: @accent;
}

window {
  padding: 0px;
  border-radius: 0px;
  border:6px;
  border-color:#272c38;
}

prompt, entry {
  text-color: @accent;
  padding: 8px;
}


entry {
    border-radius : 0 4px 4px 0;
    margin: 0 0 10px 0;
}

prompt {
    background-color: @accent;
    text-color: @bg;
    border-radius: 4px 0 0 4px;
    margin: 0 0 10px 0;
}

element {
  border-radius: 2px;
  padding: 6px 4px;
}

element selected {
  background-color: @bg;
  text-color: @accent;
}

button {
    padding: 6px;
    margin: 10px 0 0 0;
}

button selected {
  background-color: @bg;
  text-color: @accent;
  border-radius: 2px;
  padding: 4px;
}
